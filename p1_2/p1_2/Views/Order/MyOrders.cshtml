@model p1_2.Models.OrderView

@{
  ViewData["Title"] = "MyOrders";
  Layout = "~/Views/Shared/_LayoutOrder.cshtml";
}

<div class="container text-white my-3">
  <h1 class="font-weight-light text-center"><span class="username"></span> Orders</h1>
  <ul class="list-group">

    <li class="list-group-item list-group-item bg-secondary shadow-lg my-1">
      <div class="row">
        <div class="col d-flex align-items-center">
          <h4 class="m-0 d-flex">
            <span class="badge badge-dark border border-dark shadow-lg">ID</span>
          </h4>

        </div>
        <div class="col d-flex align-items-center">
          <h4 class="m-0 d-flex">
            <span class="badge badge-dark border border-dark shadow-lg">Date</span>
          </h4>

        </div>
        <div class="col d-flex align-items-center">
          <h4 class="m-0 d-flex">
            <span class="badge badge-dark border border-dark shadow-lg">Total</span>
          </h4>

        </div>
      </div>

    </li>
    @foreach (var item in Model.Orders)
    {
      <li class="list-group-item list-group-item-action list-group-item bg-dark border border-secondary shadow-lg my-1">
        <div class="row">
          <div class="col d-flex align-items-center">
            <h4 class="m-0 d-flex">
              <span class="badge badge-dark border border-secondary">@item.OrderId</span>
            </h4>

          </div>
          <div class="col d-flex align-items-center">
            <h4 class="m-0 d-flex">
              <span class="badge badge-dark border border-secondary">@item.TimeOfOrder</span>
            </h4>
          </div>
          <div class="col d-flex align-items-center">
            <h4 class="m-0 d-flex">
              <span class="badge badge-dark border border-secondary">$@item.Total</span>
            </h4>
          </div>
        </div>
      </li>
    }
  </ul>
</div>

<script>
  document.querySelector(".username").innerHTML = localStorage.UserName;
</script>
