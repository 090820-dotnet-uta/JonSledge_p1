@model p1_2.Models.ProductView

@{
  ViewData["Title"] = "Details";
}

<div class="container">
  <h1 class="text-center text-light display-4">
    Book Details
  </h1>

  <div class="jumbotron bg-dark border border-secondary rounded shadow py-3 text-center">
    <img class="card-img-top-details" src="~/img/@(Model.ImgUrl).jpg" alt="Book Cover" />
    <h1 class="text-light">@Html.DisplayFor(model => model.Title)</h1>
    <h3 class="text-light">@Html.DisplayFor(model => model.Author)</h3>
    <p class="lead text-light"> @Html.DisplayFor(model => model.Description)</p>

    <div class="row justify-content-center">
      <div class="col-5 d-flex justify-content-center p-0">
        <h2 class="my-2 d-flex text-light">
          <span class="badge badge-success mr-2">
            $@Html.DisplayFor(model => model.Price)
          </span>
          <span class="badge badge-info ml-2">
            Stock @Html.DisplayFor(model => model.Amount)
          </span>
        </h2>
      </div>
    </div>


    <hr class="my-4 bg-secondary">
    @if (Model.Amount == 0)
    {
      <button class="btn btn-secondary btn-lg a-none" type="submit" disabled>Out of stock</button>
    }
    else
    {
      <button class="btn btn-success btn-lg a-none text-white" type="submit">@Html.ActionLink("Add To Cart", "AddToCart", "Product", @Model)</button>
    }
  </div>
</div>

